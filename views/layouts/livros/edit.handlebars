<h1>Editar Estudante</h1>
<form action="/edit/{{estudante.id}}" method="POST">
  <label for="nome">Nome:</label>
  <input type="text" id="nome" name="nome" value="{{estudante.nome}}" required>
  <label for="idade">Idade:</label>
  <input type="number" id="idade" name="idade" value="{{estudante.idade}}" required>
  <button type="submit">Salvar</button>
</form>
<a href="/">Voltar</a>
