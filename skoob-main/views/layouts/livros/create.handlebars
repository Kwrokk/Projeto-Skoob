<h1>Adicionar Livros</h1>
<form action="/create-book" method="POST">
  <label for="titulo">Título:</label>
  <input type="text" id="titulo" name="titulo" required>

  <label for="dtlanc">Lançamento:</label>
  <input type="date" id="dtlanc" name="dtlanc" required>

  <label for="autor">Autor:</label>
  <input type="text" id="autor" name="autor" required>

  <label for="genero">Gênero:</label>
  <input type="text" id="genero" name="genero" required>

  <label for="preco">Preço:</label>
  <input type="number" id="preco" name="preco" required>
  
  <label for="adap_cinema">Adaptação de Cinema:</label>
  <input type="text" name="adap_cinema" id="adap_cinema">

  <label for="nota">Nota:</label>
  <input type="number" min="1" max="10" name="nota" id="nota">
  
  <button type="submit">Salvar</button>
</form>
<a href="/">Voltar</a>
