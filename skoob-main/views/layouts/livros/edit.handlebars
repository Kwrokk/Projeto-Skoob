<h1>Editar Livros</h1>
<form action="/edit-book/{{livro.id}}" method="POST">

  <input type="number" hidden id="id" name="id" value="{{livro.id}}" required>

  <label for="título">Título:</label>
  <input type="text" id="título" name="título" value="{{livro.título}}" required>

  <label for="dtlanc">Lançamento:</label>
  <input type="date" id="dtlanc" name="dtlanc" value="{{livro.dtlanc}}" required>

  <label for="autor">Autor:</label>
  <input type="text" id="autor" name="autor" value="{{livro.autor}}" required>

  <label for="genero">Gênero:</label>
  <input type="text" id="genero" name="genero" value="{{livro.genero}}" required>

  <label for="preco">Preço:</label>
  <input type="number" id="preco" name="preco" value="{{livro.preco}}" required>
  
  <label for="adap_cinema">Adaptação de Cinema:</label>
  <input type="text" name="adap_cinema" id="adap_cinema" value="{{livro.adap_cinema}}">

  <label for="nota">Nota:</label>
  <input type="number" min="1" max="10" name="nota" id="nota" value="{{livro.nota}}">
  
  <button type="submit">Salvar</button>
</form>
<a href="/">Voltar</a>
