<h1>Editar Publicações</h1>
<form action="/edit-publication/{{publicacao.id}}" method="POST">

  <input type="text" id="id" name="id" value="{{publicacao.id}}" hidden required>

  <label for="titulo">Título:</label>
  <input type="text" id="titulo" name="titulo" value="{{publicacao.titulo}}" required>

  <label for="descricao">Descrição:</label>
  <input type="date" id="descricao" name="descricao" value="{{publicacao.descricao}}" required>

  <label for="autor">Autor:</label>
  <input type="number" id="autor" name="autor" value="{{publicacao.autor}}" required>

  <label for="tema">Tema:</label>
  <input type="text" id="tema" name="tema" value="{{publicacao.tema}}" required>

  <button type="submit">Salvar</button>
</form>
<a href="/">Voltar</a>
