  <label for="nome">Nome:</label>
  <input type="text" id="nome" name="nome" value="{{usuario.nome}}" required>
  
  <label for="email">email:</label>
  <input type="email" id="email" name="email" value="{{usuario.email}}" required>
  
  <label for="senha">senha:</label>
  <input type="password" id="senha" name="senha" value="{{usuario.senha}}" required>
  
  <input readonly type="number" id="pontos" name="pontos" value="{{usuario.pontos}}" required>
  
  <input readonly type="number" id="tempo_lid" name="tempo_lid" value="{{usuario.tempo_lid}}" required>
  
  <button type="submit">Salvar</button>
</form>
